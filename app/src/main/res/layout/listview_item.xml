<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:id="@+id/listview_item"
    android:descendantFocusability="blocksDescendants"
    >
    <LinearLayout
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:id="@+id/checkbox_layout"
        >
        <CheckBox
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@null"
            android:background="@drawable/selector_checkbox"
            android:id="@+id/checkbox"
            android:layout_gravity="center"
            android:visibility="invisible"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/stock_layout"
        android:layout_weight="6"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Defalut"
                android:id="@+id/text_stock_name"
                android:textSize="16dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:text="03.01 17:29"
                android:id="@+id/text_stock_updatedAt"
                android:textSize="16dp"
                android:textColor="#acacac"
            />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="00,000"
                android:id="@+id/text_stock_price"
                android:textSize="28dp"
                android:textColor="#000000"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="DFT"
                android:id="@+id/text_stock_price_unit"
                android:textSize="28dp"
                android:textColor="#343a40"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/stock_variance_layout"
        android:layout_weight="3"
        >
        <ImageView
            android:id="@+id/stock_arrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_baseline_arrow_drop_up"
            android:gravity="start"
            android:layout_marginLeft="-11dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0,000"
                android:id="@+id/text_stock_price_fluctuation"
                android:textSize="24dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="end"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00%"
                android:id="@+id/text_stock_rate"
                android:textSize="24dp"
                android:textColor="#000000"
                android:layout_gravity="end"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/stock_setting_layout"
        >

        <ImageButton
            android:id="@+id/btn_stock_alarm"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_alarm_off"
            />
    </LinearLayout>
</LinearLayout>
